  "version": "0.2.0",
  "configurations": [
    {
      "args": ["${relativeFile}"],
      "cwd": "${workspaceFolder}",
      "name": "TS Script (this file)",
      "request": "launch",
      "runtimeArgs": ["--nolazy", "-r", "ts-node/register"],
      "sourceMaps": true,
      "type": "node",
    },
    {
      "name": "Run Server",
      "outFiles": ["${workspaceFolder}/dist/**/*.js"],
      "preLaunchTask": "tsc: build - tsconfig.json",
      "program": "${workspaceRoot}/server.ts",
      "request": "launch",
      "sourceMaps": true,
      "type": "node"
    },
  ]
}